    "framer-motion": "^12.23.24",
    "i18next": "^25.6.0",
    "js-cookie": "^3.0.5",
    "jsonwebtoken": "^9.0.2",
    "pixi-live2d-display": "^0.4.0",
    "pixi.js": "^6.5.8",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-icons": "^5.5.0",
    "react-reconciler": "^0.33.0",
